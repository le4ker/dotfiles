" disable vi compatibility
set nocompatible

syntax on

" line numbers
set number
set relativenumber

set nowrap

" search
set incsearch
set hlsearch
set ignorecase

" invisible characters
set list
set listchars=tab:→\ ,lead:·,trail:·,nbsp:+,eol:¬

" indent
set expandtab
set tabstop=2
set shiftwidth=2

" mappings
let mapleader = " "
nnoremap <leader>s :w<cr>
nnoremap <S-u> <C-r>
inoremap jk <esc>
